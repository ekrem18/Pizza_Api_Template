<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <title>Pizza App</title>
    <style>
      input {
        width: 100%;
      }

      table th,
      table td {
        vertical-align: top;
        padding: 5px;
      }

      span.helptext {
        font-size: 50%;
        opacity: 0.75;
      }

      img {
        max-width: 500px;
        height: auto;
      }
    </style>
  </head>

  <body>
    <!-- navbar start -->
    <nav class="navbar navbar-expand-lg navbar navbar-white">
      <div class="container-fluid">
        <a class="navbar-brand alert-warning" href="/">
          <img src="/assets/images/nadia.jpeg" width="80" height="80" />
          <span>Nadia's Garden Pizza</span>
        </a>
        <div class="collapse navbar-collapse" id="navbars-host">
          <!-- admin-area-begin -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/users/create">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login"><b>Login</b></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- navbar end -->
    <!-- content start -->
    <div class="pb-5">
        <div class="row">
        </div>
        <div class="d-flex flex-wrap justify-content-center pt-5">
            {% for (let pizza of pizzas) { %}
            <div class="card m-3 shadow" style="max-width: 640px;">
                <div class="row">
                    <div class="col-md-6">
                        {% if (pizza?.image) { %}
                        <img src="{%= pizza.image %}" class="img-fluid rounded-start" style="width: 350px; height: 275px;">
                        {% } %}
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h4 class="card-title">{%= pizza.name %}</h4>
                            <div class="card-text">
                                <ul>
                                    {% for (let topping of pizza.toppings) { %}
                                    <li>{%= topping.name %}</li>
                                    {% } %}
                                </ul>
                                <strong> {%= pizza.price %} $</strong>
                            </div>
                            <div class="pt-3">
                                <a href="/orders/create?pizza={%= pizza.id %}" class=" btn btn-warning">Order</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% } %}
        </div>
        {%- include('partials/pagination') -%}
    </div>
    <!-- content end -->
    <!-- footer start -->
    <footer class="bg-dark text-white p-1 position-fixed bottom-0 w-100">
      <div class="text-center">Clarusway FullStack Team</div>
    </footer>
    <!-- footer end -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
